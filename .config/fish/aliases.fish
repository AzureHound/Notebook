alias private='fish -P'
alias rg='rg -i'
alias gitlogs='git log --oneline --graph --all'
alias powertop='sudo powertop'
alias zed='zeditor'

alias asciiquarium='asciiquarium -t'
alias bonsai='cbonsai --seed 119'
alias lofi='lowfi'
