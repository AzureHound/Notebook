# aliases
alias .='cd ..'
alias ..='cd ../..'
alias ...='cd ../../..'

alias la='eza -a --icons'
alias ll='eza -a -l --icons'
alias cp='cp -i'
alias mv='mv -i'
alias df='df -h'
alias tree='eza -a -T --git-ignore --icons'
alias lta4="eza -lTag --git-ignore --level=4 --icons"
